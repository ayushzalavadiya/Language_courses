                    app:layout_constraintEnd_toEndOf="parent">

                </ImageView>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:background="@drawable/arrow3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/imageView3"
                    app:layout_constraintStart_toStartOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="@+id/imageView3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/module3"
                android:layout_width="140dp"
                android:layout_height="144dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="@+id/module1"
                app:layout_constraintTop_toBottomOf="@+id/module1">


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/module_1_s"
                    android:fontFamily="@font/abhaya_libre_extrabold"
                    android:gravity="center"
                    android:text="AI / ML"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="2dp"
